<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Remote Video (Full Screen) -->
    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/remoteView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Local Video (Picture-in-Picture) -->
    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/localView"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_gravity="top|end"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="80dp" />

    <!-- Emoji Display Overlay -->
    <TextView
        android:id="@+id/emojiOverlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="100sp"
        android:visibility="gone" />

    <!-- ========== TOP SECTION - Collapsible Stats ========== -->
    <LinearLayout
        android:id="@+id/statsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:background="#80000000">

        <!-- Main Header (Always Visible) - Tap to expand -->
        <LinearLayout
            android:id="@+id/statsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/callStateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connecting..."
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Call Quality Indicator (Always shown) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/callQualityText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“¶ Excellent"
                        android:textColor="#4CAF50"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/callDurationText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" â€¢ 00:00"
                        android:textColor="#BBBBBB"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Expand/Collapse Arrow -->
            <ImageView
                android:id="@+id/statsExpandArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_expand_more"
                app:tint="@android:color/white" />

        </LinearLayout>

        <!-- Expandable Stats Details -->
        <LinearLayout
            android:id="@+id/statsDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:paddingBottom="12dp"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#40FFFFFF"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/networkStatsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â†‘ 0 kbps  â†“ 0 kbps"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/networkQualityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RTT: -- | Loss: --%"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/networkTypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Network: Detecting..."
                android:textColor="#BBBBBB"
                android:textSize="11sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/dataUsageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data: 0.00 MB"
                android:textColor="#4CAF50"
                android:textSize="11sp"
                android:layout_marginTop="2dp" />

            <!-- Audio Only Mode Indicator -->
            <TextView
                android:id="@+id/audioOnlyIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ž Audio Only Mode"
                android:textColor="#FFC107"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <!-- ========== LEFT SIDE - Chat Messages ========== -->
    <LinearLayout
        android:id="@+id/chatContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        android:background="#80000000"
        android:padding="8dp"
        android:visibility="gone">

        <!-- Chat feature removed -->

    </LinearLayout>

    <!-- ========== RIGHT SIDE - Collapsible Emoji Bar ========== -->
    <LinearLayout
        android:id="@+id/emojiContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:background="#80000000"
        android:padding="8dp">

        <!-- Emoji Toggle Button (Always Visible) -->
        <TextView
            android:id="@+id/emojiToggle"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="ðŸ˜Š"
            android:textSize="24sp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <!-- Expandable Emoji List -->
        <LinearLayout
            android:id="@+id/emojiList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#40FFFFFF"
                android:layout_marginVertical="4dp" />

            <TextView
                android:id="@+id/emoji1"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:text="ðŸ‘"
                android:textSize="24sp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <TextView
                android:id="@+id/emoji2"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:text="â¤ï¸"
                android:textSize="24sp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <TextView
                android:id="@+id/emoji3"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:text="ðŸ˜‚"
                android:textSize="24sp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <TextView
                android:id="@+id/emoji4"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:text="ðŸ˜®"
                android:textSize="24sp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <TextView
                android:id="@+id/emoji5"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:text="ðŸ‘"
                android:textSize="24sp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <TextView
                android:id="@+id/emoji6"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:text="ðŸŽ‰"
                android:textSize="24sp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />

        </LinearLayout>

    </LinearLayout>

    <!-- ========== BOTTOM SECTION - Control Buttons ========== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:paddingVertical="16dp"
        android:paddingHorizontal="16dp"
        android:background="#80000000">

        <!-- Top Row: Speaker, Audio-Only, Switch Camera -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/speakerBtn"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/btn_circle_background"
                android:src="@drawable/ic_speaker"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:contentDescription="Speaker"
                android:layout_marginHorizontal="6dp" />

            <ImageButton
                android:id="@+id/audioOnlyBtn"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/btn_circle_background"
                android:src="@drawable/ic_audioonly"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:contentDescription="Audio Only"
                android:layout_marginHorizontal="6dp" />

            <ImageButton
                android:id="@+id/qualityBtn"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/btn_circle_background"
                android:src="@drawable/ic_quality"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:contentDescription="Video Quality"
                android:layout_marginHorizontal="6dp" />

            <ImageButton
                android:id="@+id/switchCameraBtn"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/btn_circle_background"
                android:src="@drawable/ic_switch_camera"
                android:scaleType="centerInside"
                android:padding="12dp"
                android:contentDescription="Switch Camera"
                android:layout_marginHorizontal="6dp" />

        </LinearLayout>

        <!-- Bottom Row: Mute, End Call, Video Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/muteBtn"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/btn_circle_background"
                android:src="@drawable/ic_mic"
                android:scaleType="centerInside"
                android:padding="14dp"
                android:contentDescription="Mute"
                android:layout_marginHorizontal="16dp" />

            <ImageButton
                android:id="@+id/endCallBtn"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/btn_circle_red"
                android:src="@drawable/ic_call_end"
                android:scaleType="centerInside"
                android:padding="16dp"
                android:contentDescription="End Call"
                android:layout_marginHorizontal="16dp" />

            <ImageButton
                android:id="@+id/videoToggleBtn"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/btn_circle_background"
                android:src="@drawable/ic_videocam"
                android:scaleType="centerInside"
                android:padding="14dp"
                android:contentDescription="Toggle Video"
                android:layout_marginHorizontal="16dp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
