<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Remote Video (Full Screen) -->
    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/remoteView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Local Video (Picture-in-Picture) -->
    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/localView"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_gravity="top|end"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="100dp" />

    <!-- Emoji Display Overlay -->
    <TextView
        android:id="@+id/emojiOverlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="100sp"
        android:visibility="gone" />

    <!-- Call State & Stats (Top) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#80000000">

        <TextView
            android:id="@+id/callStateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Connecting..."
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/networkStatsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:fontFamily="monospace" />

        <TextView
            android:id="@+id/networkQualityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />

        <!-- Audio Only Mode Indicator -->
        <TextView
            android:id="@+id/audioOnlyIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="ðŸ“ž Audio Only Mode"
            android:textColor="#FFC107"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Emoji Reaction Bar (Middle Right) -->
    <LinearLayout
        android:id="@+id/emojiBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:background="#80000000"
        android:padding="8dp">

        <TextView
            android:id="@+id/emoji1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="ðŸ‘"
            android:textSize="24sp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/emoji2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="â¤ï¸"
            android:textSize="24sp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/emoji3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="ðŸ˜‚"
            android:textSize="24sp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/emoji4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="ðŸ˜®"
            android:textSize="24sp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/emoji5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="ðŸ‘"
            android:textSize="24sp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Control Buttons (Bottom) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:paddingVertical="16dp"
        android:paddingHorizontal="16dp"
        android:background="#80000000">

        <!-- Top Row: Speaker, Audio-Only Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/speakerBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/btn_circle_background"
                android:src="@drawable/ic_speaker"
                android:scaleType="centerInside"
                android:padding="12dp"
                android:contentDescription="Speaker"
                android:layout_marginHorizontal="12dp" />

            <ImageButton
                android:id="@+id/audioOnlyBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/btn_circle_background"
                android:src="@drawable/ic_audioonly"
                android:scaleType="centerInside"
                android:padding="12dp"
                android:contentDescription="Audio Only"
                android:layout_marginHorizontal="12dp" />

            <ImageButton
                android:id="@+id/switchCameraBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/btn_circle_background"
                android:src="@drawable/ic_switch_camera"
                android:scaleType="centerInside"
                android:padding="12dp"
                android:contentDescription="Switch Camera"
                android:layout_marginHorizontal="12dp" />

        </LinearLayout>

        <!-- Bottom Row: Mute, End Call, Video Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/muteBtn"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/btn_circle_background"
                android:src="@drawable/ic_mic"
                android:scaleType="centerInside"
                android:padding="14dp"
                android:contentDescription="Mute"
                android:layout_marginHorizontal="16dp" />

            <ImageButton
                android:id="@+id/endCallBtn"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/btn_circle_red"
                android:src="@drawable/ic_call_end"
                android:scaleType="centerInside"
                android:padding="16dp"
                android:contentDescription="End Call"
                android:layout_marginHorizontal="16dp" />

            <ImageButton
                android:id="@+id/videoToggleBtn"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/btn_circle_background"
                android:src="@drawable/ic_videocam"
                android:scaleType="centerInside"
                android:padding="14dp"
                android:contentDescription="Toggle Video"
                android:layout_marginHorizontal="16dp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>