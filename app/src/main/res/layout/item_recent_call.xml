<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <!-- Call Type Icon -->
    <ImageView
        android:id="@+id/callIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_call_made"
        app:tint="@color/primary" />

    <!-- Call Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/phoneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234567890"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/callTypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outgoing video call"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" â€¢ "
                android:textSize="12sp"
                android:textColor="@color/text_hint" />

            <TextView
                android:id="@+id/durationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5m 23s"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

    </LinearLayout>

    <!-- Time -->
    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2:30 PM"
        android:textSize="12sp"
        android:textColor="@color/text_hint"
        android:layout_marginEnd="8dp" />

    <!-- Call Buttons -->
    <ImageButton
        android:id="@+id/videoCallBtn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_videocam"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:padding="6dp"
        app:tint="@color/primary"
        android:contentDescription="Video call" />

    <ImageButton
        android:id="@+id/audioCallBtn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_call"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:padding="6dp"
        app:tint="@color/secondary"
        android:contentDescription="Audio call" />

    <!-- Stats Button (visible when hasStats is true) -->
    <ImageButton
        android:id="@+id/statsBtn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_stats"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:padding="6dp"
        app:tint="#FF9800"
        android:contentDescription="View call stats"
        android:visibility="gone" />

</LinearLayout>
