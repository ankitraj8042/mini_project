<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp">

        <TextView
            android:id="@+id/myPhoneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your number: "
            android:textSize="14sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/connectionStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â— Connecting..."
            android:textSize="12sp"
            android:textColor="#FFA000"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Dial Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter phone number to call"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginBottom="24dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialPhoneInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:maxLength="10"
            android:textSize="24sp"
            android:gravity="center"
            android:letterSpacing="0.1" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Call Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/videoCallBtn"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="ðŸ“¹ Video Call"
            android:textAllCaps="false"
            android:backgroundTint="#6200EE"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/audioCallBtn"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="ðŸ“ž Audio Call"
            android:textAllCaps="false"
            android:backgroundTint="#03DAC5"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Status message -->
    <TextView
        android:id="@+id/statusMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:textColor="#F44336"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
